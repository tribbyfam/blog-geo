<section class="section section-details grey lighten-4">
  <div class="container">
    <div class="row">
      <div class="col s12">
        <div class="card">
          <div class="card-content">
            <div class="row">
              <div class="col s12 m6">
                <span class="card-title">My Posts</span>
              </div>
              <% @posts.each do |post| %>
              <div class="row">
                <div class="col s12 center">
                  <img src="<%= post.user.pics %>" alt="" class="responsive-img circle" style="width: 40px;margin-left:10px;">
                  <h4><%= post.title %></h4>
                  <p><%= post.content %></p> 
                </div>
              </div>
              <% end %>
            </div>
          </div>
          <div class="card-action">
            <a href="/delete_user"> <button action="delete" class="btn red">Delete</button></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>



 
 
