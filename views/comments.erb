 <!-- Section: Comments -->
<section class="section section-comments grey lighten-4">
  <div class="container">
    <div class="row">
      <div class="col s12">
        <div class="card">
          <div class="card-content">
            <span class="card-title">Comments</span>
            <table class="striped">
              <tbody>
                <tr>
                <% @comments.each do |comment| %>
                  <td width="70">
                    <img src="<%= @user_pics.pics %>" alt="" class="responsive-img circle" style="width: 40px;margin-left:10px;">
                  </td>
                  <td><%= comment.content %></td>
                  <td>
                    <a href="/comments" class="green-text">
                      <i class="material-icons">done</i>
                    </a>
                    <a href="/delete_comment" class="red-text">
                      <i class="material-icons">close</i>
                    </a>
                    <p>Created by: <%= @user.first_name %> </p> <br>
                    <p>Created on: <%= comment.created_at %> </p>
                  </td>
                </tr>
              </tbody>
              <% end %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>