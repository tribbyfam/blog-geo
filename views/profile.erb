

<div class="row">
  <div class="col s12 m7">
    <div class="card">
      <div class="card-image">
        <img src="images/sample-1.jpg">
        <span class="card-title">Profile</span>
        </div>
          <table class="striped">
            <thead>
              <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>User Name</th>
                <th>Birth Date</th>
                <th>Registered on</th>   
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <%= @user.first_name.capitalize %>
                </td>
                <td>
                  <%= @user.last_name.capitalize %>
                </td>
                <td>
                  <%= @user.username %>
                </td>
                <td>
                  <%= @user.birthday %>
                </td>
                <td>
                  <%= @user.created_at.strftime("%d/%m/%Y") %>
                </td>
              </tr>
            </tbody>
          </table>
        </div> 
        <form class="btn red del-btn" action="/delete_user" method="post">
          <input type="submit" value="Delete Account">
        </form>
    </div>
  </div>
</div>