<div class="container">
  <form method="POST" action="/new_post">
    <div class="input-field">
      <input type="text" id="title" name="title" placeholder="title of your post here">
      <label for="title">Title</label>
    </div>
    <div class="input-field">
      <textarea name="content" id="content" class="materialize-textarea">
          Content of your post here
        </textarea>
    </div>
    <div class="card-action">
      <button type="submit" class="btn green">Save</button>
      <button type="submit" class="btn red">Cancel</button>
    </div>
  </form>
</div>


