<section class="section section-details grey lighten-4">
  <div class="container">
    <div class="row">
      <div class="col s12">
        <div class="card">
          <div class="card-content">
            <div class="row">
              <div class="col s12 m6">
                <span class="card-title">All posts</span>
              </div>
              <div class="col s12 m6 center">
                <img src="/images/bart.jpg" alt="" class="responsive-img circle" style="width: 40px;margin-left:10px;">
                <span><%= @current_user.first_name %> signed in</span>
            
              </div>
            </div>
        <% @posts.each do |post|%>
            <form>
              <div class=" row input-field">
                <div class="col s12 m6">
                  <div class="card-panel hoverable">
                    <label for="title">Title</label>
                    <input type="text" id="title" value="<%= post.title %>">
                  </div>
                </div>
                <div class="col s6 m6">
                  <div class="card-action">
                    <label for="author">Author</label>
                    <input type="text" id="title" value="<%= post.user.first_name %>">
                    <div class="card-action">
                      <a href="/new_comments"> 
                      <button class="btn green darken-3">Add New Comment</button>
                      </a>
                      <input type="hidden" name = "post_id" value = "<%= post.id %>">
                    </div>
                  </div>
                </div>
            
              </div>
              <div class="input-field">
                <textarea name="body" id="body" class="materialize-textarea trancate flow-text">
                    <%= post.content %>
                </textarea>
              </div>
            </form id="break">
            <br>
        <% end %>
          </div> 
        </div>
      </div>
    </div>
  </div>
</section>