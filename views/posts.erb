<section class="section section-details grey lighten-4">
  <div class="container">
    <div class="row">
      <div class="col s12">
        <div class="card">
          <div class="card-content">
            <div class="row">
              <div class="col s12 m6">
                <span class="card-title">All posts</span>
              </div>
              <div class="col s12 m6 center">
                <img src="/images/bart.jpg" alt="" class="responsive-img circle" style="width: 40px;margin-left:10px;">
                <span><%= @current_user.first_name %> signed in</span>
            
              </div>
            </div>
        <% @posts.each do |post|%>
            <form>
              <div class="input-field">
                <input type="text" id="title" value="<%= post.title %>">
                <label for="title">Title</label>
              </div>
              <div class="input-field">
                <textarea name="body" id="body" class="materialize-textarea">
                    <%= post.content %>
                </textarea>
                <input type="text" id="author" value="
                <%= post.user.first_name %>">
                <label for="author">Author</label>
            </form> <br>
        <% end %>
          </div>
          <div class="card-action">
            <button type="submit" class="btn green"><a href="/new_post"> Comment</a></button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>